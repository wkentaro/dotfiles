# vim: set ft=gitconfig:

[user]
	name = Kentaro Wada
	email = www.kentaro.wada@gmail.com
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
	renames = true
	algorithm = histogram
	colorMoved = default
[interactive]
	diffFilter = delta --color-only
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	bw = browse
	pr = pull-request
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit --date=iso
	pl = !hub browse -- pulls
	is = !hub browse -- issues
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[core]
	excludesfile = ~/.gitignore_global
	# pager = diff-so-fancy | less
	pager = delta | less
[delta]
	navigate = true
	line-numbers = true
[merge]
	conflictstyle = diff3
[http]
	sslVerify = false
[rerere]
	enabled = true
[branch]
	autosetupmerge = always
[pull]
	rebase = true
[push]
	default = current
[pager]
	status = false
	branch = false
[credential]
	helper = store
[init]
	defaultBranch = main
